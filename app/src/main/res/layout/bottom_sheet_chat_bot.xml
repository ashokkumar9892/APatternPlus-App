<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9C000000"
    tools:context=".selectTeam.fragments.SelectTeamFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/drawable_shape_login"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/text_color_9" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/outfit_semibold"
            android:layout_marginTop="@dimen/_19sdp"
            android:textColor="@color/text_color_4"
            android:text="@string/chat_bot"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tool_bar_message"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/_21sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_17"
                    android:background="@drawable/drawable_shape_message_reciever"
                    android:fontFamily="@font/outfit_light"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/lorem_ipsum_is_a_dummy_text"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_light"
                    android:text="@string/_07_55_am"
                    android:textColor="@color/text_color_15"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_17"
                    android:background="@drawable/drawable_shape_message_sender"
                    android:fontFamily="@font/outfit_light"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/lorem_ipsum_is_a_dummy_text"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_light"
                    android:text="@string/_07_55_am"
                    android:textColor="@color/text_color_15"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_17"
                    android:background="@drawable/drawable_shape_message_reciever"
                    android:fontFamily="@font/outfit_light"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/lorem_ipsum_is_a_dummy_text"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_light"
                    android:text="@string/_07_55_am"
                    android:textColor="@color/text_color_15"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color_17"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_shape_message_sender"
                    android:fontFamily="@font/outfit_light"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/lorem_ipsum_is_a_dummy_text"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_light"
                    android:text="@string/_07_55_am"
                    android:textColor="@color/text_color_15"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_21sdp"
            android:layout_marginEnd="@dimen/_21sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/drawable_shape_21sdp"
            android:drawableEnd="@drawable/ic_send"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/outfit_light"
            android:gravity="center_vertical"
            android:hint="@string/type_your_message"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_6sdp"
            android:textColorHint="@color/text_color_1"
            android:textSize="@dimen/_13ssp" />


    </LinearLayout>


</RelativeLayout>