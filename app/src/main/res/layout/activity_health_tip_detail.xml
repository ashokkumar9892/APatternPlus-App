<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.nutrition.RecipeDetailActivity">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/layout_tool_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tool_bar"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/_18sdp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_184sdp"
                            android:id="@+id/iv_top"
                            android:backgroundTint="@color/black"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/dummy_food" />

                    </com.google.android.material.card.MaterialCardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/outfit_semibold"
                        android:text="@string/lorem_ipsum_is_a_dummy_text"
                        android:textColor="@color/text_color_4"
                        android:textSize="@dimen/_17sdp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:fontFamily="@font/outfit_light"
                        android:text="@string/exa_nutrition_tracking"
                        android:textColor="@color/text_color_3"
                        android:textSize="@dimen/_12sdp" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_subscribe"
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:fontFamily="@font/outfit_semibold"
                        android:text="@string/subscribe"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14ssp"
                        app:cornerRadius="@dimen/_8sdp" />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/nutrition_graph" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>