<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.progressTracker.ApScoreActivity">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/layout_tool_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tool_bar"
            android:background="@color/bg_color_5"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="@dimen/_21sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:background="@drawable/drawable_shape_10sdp"
                    android:elevation="@dimen/_2sdp"
                    android:padding="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/ap_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/outfit_regular"
                        android:paddingTop="@dimen/_1sdp"
                        android:text="@string/ap_score"
                        android:textColor="@color/text_color_4"
                        android:textSize="@dimen/_8ssp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ap_score"
                        android:fontFamily="@font/outfit_semibold"
                        android:text="@string/sixty_five"
                        android:textColor="@color/text_color_4"
                        android:textSize="@dimen/_18ssp" />


                    <ImageView
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_28sdp"

                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/splash_logo" />


                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_increase_your_ap_score"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/text_color_1"
                    android:layout_marginTop="@dimen/_18sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_text_max"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/outfit_light"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textColor="@color/text_color_3"
                    android:layout_marginTop="@dimen/_6sdp" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>