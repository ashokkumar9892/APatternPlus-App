<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        tools:context=".home.drawerFragments.appointments.CoachAppointments">

        <RelativeLayout
            android:id="@+id/tool_bar_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:paddingBottom="@dimen/_12sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/outfit_semibold"
                android:text="@string/coaching_appointment"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_menu"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_hamburger" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar_appointment"
            android:background="@color/bg_color_5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_margin="@dimen/_21sdp"
                android:background="@drawable/drawable_tab_background"
                android:padding="@dimen/_4sdp">

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"
                    app:tabIndicator="@drawable/drawable_shape_8sdp"
                    app:tabIndicatorColor="@color/text_color_14"
                    app:tabIndicatorGravity="center"
                    app:tabIndicatorHeight="@dimen/_38sdp"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="@color/text_color_4"
                    app:tabTextAppearance="@style/tab_text">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/past" />
                </com.google.android.material.tabs.TabLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                android:background="@drawable/drawable_shape_10sdp"
                android:elevation="@dimen/_2sdp"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_48sdp"

                            app:srcCompat="@drawable/coach_img" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/outfit_medium"
                                android:gravity="center_vertical"
                                android:text="@string/exa_mellisa_smith"
                                android:textColor="@color/text_color_1"
                                android:textSize="@dimen/_15ssp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:drawableStart="@drawable/ic_calendar"
                                    android:drawablePadding="@dimen/_4sdp"
                                    android:fontFamily="@font/outfit_light"
                                    android:gravity="center_vertical"
                                    android:text="Mar 5,2021"
                                    android:textColor="@color/text_color_10"
                                    android:textSize="@dimen/_9ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"

                                    android:drawablePadding="@dimen/_4sdp"
                                    android:fontFamily="@font/outfit_light"
                                    android:gravity="center_vertical"
                                    android:text="9:30 AM"
                                    android:textColor="@color/text_color_10"
                                    android:textSize="@dimen/_9ssp"
                                    app:drawableStartCompat="@drawable/ic_clock" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/stroke_color_1" />
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_48sdp"

                            app:srcCompat="@drawable/coach_img2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/outfit_medium"
                                android:gravity="center_vertical"
                                android:text="@string/exa_stella_smith"
                                android:textColor="@color/text_color_1"
                                android:textSize="@dimen/_15ssp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:drawableStart="@drawable/ic_calendar"
                                    android:drawablePadding="@dimen/_4sdp"
                                    android:fontFamily="@font/outfit_light"
                                    android:gravity="center_vertical"
                                    android:text="Mar 10,2021"
                                    android:textColor="@color/text_color_10"
                                    android:textSize="@dimen/_9ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"

                                    android:drawablePadding="@dimen/_4sdp"
                                    android:fontFamily="@font/outfit_light"
                                    android:gravity="center_vertical"
                                    android:text="10:30 AM"
                                    android:textColor="@color/text_color_10"
                                    android:textSize="@dimen/_9ssp"
                                    app:drawableStartCompat="@drawable/ic_clock" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/stroke_color_1" />
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_emma_watson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="@dimen/_48sdp"
                                android:layout_height="@dimen/_48sdp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/nurse_dummy2" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/outfit_medium"
                                android:gravity="center_vertical"
                                android:text="@string/exa_emma_watson"
                                android:textColor="@color/text_color_1"
                                android:textSize="@dimen/_15ssp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:drawableStart="@drawable/ic_calendar"
                                    android:drawablePadding="@dimen/_4sdp"
                                    android:fontFamily="@font/outfit_light"
                                    android:gravity="center_vertical"
                                    android:text="Mar 22,2021"
                                    android:textColor="@color/text_color_10"
                                    android:textSize="@dimen/_9ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"

                                    android:drawablePadding="@dimen/_4sdp"
                                    android:fontFamily="@font/outfit_light"
                                    android:gravity="center_vertical"
                                    android:text="9:30 AM"
                                    android:textColor="@color/text_color_10"
                                    android:textSize="@dimen/_9ssp"
                                    app:drawableStartCompat="@drawable/ic_clock" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@color/stroke_color_1" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_20sdp"
            android:elevation="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_add_24"

            app:backgroundTint="@color/color_primary"
            app:maxImageSize="@dimen/_24sdp"
            app:tint="@color/white" />
    </RelativeLayout>
</layout>